{
  "name": "@haetae/root",
  "version": "0.0.1",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=7"
  },
  "packageManager": "pnpm@7.5.1",
  "scripts": {
    "ts": "ts-node -r tsconfig-paths/register",
    "lint": "eslint --ext .js,.cjs,.mjs,.jsx,.ts,.tsx,.md --fix",
    "lint:md": "markdownlint --fix",
    "test": "jest",
    "husky-skip": "cross-env HUSKY=0",
    "commit": "git cz",
    "prepare": "husky install",
    "changeset:publish": "pnpm -r publish && del-cli docs/package.json && changeset tag && git push --follow-tags"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md}": [
      "pnpm lint"
    ],
    "*.md": [
      "pnpm lint:md"
    ]
  },
  "prettier": "@jjangga0214/prettier-config",
  "eslintConfig": {
    "extends": "@jjangga0214/eslint-config",
    "rules": {
      "unicorn/no-await-expression-member": "off",
      "unicorn/prefer-module": "off"
    },
    "settings": {
      "react": {
        "version": "18"
      }
    }
  },
  "eslintIgnore": [
    "node_modules",
    "dist",
    "test-project",
    "coverage",
    ".changeset",
    "CHANGELOG.md"
  ],
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.5",
    "@changesets/cli": "^2.23.2",
    "@commitlint/cli": "^16.0.1",
    "@jjangga0214/commitlint-config": "^1.0.7",
    "@jjangga0214/eslint-config": "^3.3.1",
    "@jjangga0214/jest-config": "^4.0.2",
    "@jjangga0214/markdownlint-config": "^1.0.3",
    "@jjangga0214/prettier-config": "^2.0.2",
    "@jjangga0214/tsconfig": "^3.2.1",
    "@swc/core": "^1.2.125",
    "@swc/helpers": "^0.2.12",
    "@swc/jest": "^0.2.21",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.6.0",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^4.28.4",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "del-cli": "^5.0.0",
    "eslint": "^8.6.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^25.3.4",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-markdown": "^2.2.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unicorn": "^39.0.0",
    "husky": "^7.0.1",
    "jest": "^28.1.3",
    "lint-staged": "^12.1.5",
    "markdownlint-cli": "^0.30.0",
    "prettier": "^2.5.1",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.1",
    "typescript": "^4.5.4"
  },
  "keywords": [
    "haetae",
    "test",
    "lint",
    "build",
    "incremental",
    "ci",
    "devOps",
    "monorepo"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jjangga0214/haetae.git"
  },
  "bugs": {
    "url": "https://github.com/jjangga0214/haetae/issues"
  },
  "homepage": "https://github.com/jjangga0214/haetae",
  "author": {
    "name": "Gil B. Chan",
    "email": "bnbcmindnpass@gmail.com",
    "url": "https://github.com/jjangga0214"
  }
}
